<!DOCTYPE HTML>
<htmL>
  <head>
    <div class="wholepage">
      <div class="map">
        <div id="map-canvas">


          <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>

          <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>


            <div id="map"></div>


          <script type="text/javascript">
            var handler = Gmaps.build('Google');
            handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
              var markers = handler.addMarkers(<%= raw @location_markers.to_json %>);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
            });
          </script>

        </div> <!-- end map-canvas -->
      </div> <!-- end map -->


      <div class="sidebar"> <!-- right side of page -->
        <h1>Help Requests</h1>
        <div class="needs-container">
          <ul>
            <% @needs.each do |need|%>
              <li class="listing">
                <div class="row">
                  <div class="col-12 col-lg-8">
                    <h3><%= need.title %></h3><br>
                    <p><%= need.description %></p><br>
                    <h4><%= need.location.address %></h4>
                  </div>
                  <div class="col-12 col-lg-4 righty">
                    <a class="btn btn-primary" href="#">Lend a Hand</a>
                  </div>
                </div> <!-- end row -->
              </li>
            <% end %>
          </ul>
        </div> <!-- end search results -->

        <div class="add-button">
          <%= link_to 'Add new help request', new_need_path, class: "btn btn-success" %>
        </div> <!-- end button -->
      </div> <!-- end sidebar -->
    </div> <!-- wholepage -->
  </body>
</html>
