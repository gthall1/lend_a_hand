<!DOCTYPE HTML>
<htmL>
  <head>
    <div class="wholepage">
      <div class="map">
        <div id="map-canvas">


          <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>

          <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>


            <div id="map"></div>


          <script type="text/javascript">
            var handler = Gmaps.build('Google');
            handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
              var markers = handler.addMarkers(<%= raw @location_markers.to_json %>);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
            });
          </script>

        </div> <!-- end map-canvas -->
      </div> <!-- end map -->


      <div class="sidebar"> <!-- right side of page -->
        <h1>Help Requests</h1>
          <ul>
            <% @needs.each do |need|%>
              <li>TITLE: <%= need.title %><br> DESCRIPTION: <%= need.description %><br>
                <%= need.location.address %></li>
            <% end %>
          </ul>

        <%= link_to 'Add new help request', new_need_path %>
      </div> <!-- end sidebar -->
    </div> <!-- wholepage -->
  </body>
</html>
