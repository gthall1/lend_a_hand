<div id = "myCarousel" class = "carousel slide">
  <!-- Indicators -->
  <ol class = "carousel-indicators">
    <li data-target = "#myCarousel" data-slide-to = "0" class = "active"></li>
    <li data-target = "#myCarousel" data-slide-to = "1"></li>
    <li data-target = "#myCarousel" data-slide-to = "2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class = "carousel-inner">

    <div class = "item active">
      <%= image_tag "wildfire.jpg", class: "img-responsive", alt: "Forrest Fire" %>
      <div class = "carousel-caption">
        <h2><!-- sample heading here --></h2>
        <p><!-- sample description here --></p>
      </div>
    </div>

    <div class = "item">
      <%= image_tag "flag1.jpg", class: "img-responsive", alt: "American Flag in tornado reckage" %>
      <div class = "carousel-caption">
        <h2><!-- sample heading here --></h2>
        <p><!-- sample description here --></p>
      </div>
    </div>

    <div class = "item">
      <%= image_tag "hurricane.jpg", class: "img-responsive", alt: "Hurricane damage" %>
      <div class = "carousel-caption">
        <h2><!-- sample heading here --></h2>
        <p><!-- sample description here --></p>
      </div>
    </div>
  </div>


    <div class="search-area">
      <form class="form-inline" role="form" id="searchForm">
        <div class="form-group col-sm-4 col-sm-offset-4">
          <div class="input-group input-group-lg">
            <input type="text" class="form-control" placeholder="Where can you help...?">
            <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
          </div>
        </div>
      </form>
    </div> <!-- end search area -->

  </div>  <!-- end carousel inner -->
</div>
  <!-- Controls -->
  <!-- if you want darkening on left/right side upon hover, put class="right carousel-control" -->
  <a class="carousel-control left" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="carousel-control right" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>


</div> <!-- end carousel -->
